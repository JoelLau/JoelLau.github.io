---
import "../assets/styles/reset.css";
import "../assets/styles/global.css";

const name = "Joel Lau";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- CSS Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link
			rel="preconnect"
			href="https://fonts.gstatic.com"
			crossorigin
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
			rel="stylesheet"
		/>
		<!-- /CSS Fonts -->
		<title>{name}</title>
	</head>

	<body class="stack-layout">
		<section class="hero-section">
			<h1>{name}</h1>
			<p>
				<nav>
					<ul>
						<li>
							<a
								href="https://www.linkedin.com/in/joel-lau"
								target="_blank"
							>
								<!-- TODO: replace with icon -->
								LinkedIn
							</a>
						</li>
						<li>
							<a
								href="https://github.com/JoelLau"
								target="_blank"
							>
								<!-- TODO: replace with icon -->
								GitHub
							</a>
						</li>
					</ul>
				</nav>
			</p>
		</section>
	</body>
</html>

<style>
	.stack-layout {
		display: flex;
		flex-flow: column;
	}

	.hero-section {
		display: flex;
		flex-flow: column;
		gap: 0.5rem;
		justify-content: center;

		width: 100%;
		height: 95vh;
		padding: 0 20%;

		font-size: 4rem;
	}

	.hero-section > h1 {
		font-size: 8rem;
	}
</style>
